{
  "name": "dundun-sentinel",
  "version": "2.0.0",
  "description": "炖炖哨兵 - 轻量级网站监控系统（Workers + Assets 版本）",
  "type": "module",
  "scripts": {
    "dev": "npm run build:frontend && wrangler dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm install && npm run build",
    "deploy": "npm run build && wrangler deploy",
    "tail": "wrangler tail",
    "test:local": "wrangler dev --local",
    "migrate": "node scripts/migrate.js"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "monitoring",
    "uptime",
    "assets"
  ],
  "author": "人生大乱炖",
  "license": "MIT",
  "devDependencies": {
    "wrangler": "^4.56.0"
  },
  "dependencies": {
    "migrate": "^2.1.0"
  }
}
